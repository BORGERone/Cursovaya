<Main>:
    name: "main"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "AniLang"
            font_size: 32

        Button:
            text: "Начать изучать"
            font_size: 32
            on_press: app.AppManager.current = "Lern"



<LernScreen>:
    name: "Lern"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Label:
            id:WORD
            text: root.word
            font_size: 32
        TextInput:
            id: input
            font_size: 32
            focus: True
        Button:
            text: "Проверить"
            font_size: 32
            on_release: root.check(input.text)
<WrongScreen>:
    name: "wrong"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "НЕВЕРНО"
            font_size: 32
        Label:
            text: "Верный вариант: {root.right_word}"
            font_size: 32

        Button:
            text: "Назад"
            font_size: 32
            on_press: app.AppManager.current = "Lern"