<FirstWindow>:
    name: "first"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "AnyLang"
            font_size: 32

        Button:
            text: "Изучать"
            font_size: 32
            on_release:
                app.root.transition.direction = 'left'
                app.root.current = "second"

        Button:
            text: "Настройки"
            font_size: 32
            on_release:
                app.root.transition.direction = 'left'
                app.root.current = "Option"


<SecondWindow>:
    name: "second"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Выберите библиотеку"
            font_size: 32

        Button:
            text: "Стандартная"
            font_size: 32
            on_release:
                app.root.transition.direction = 'left'
                app.root.current = "St"

        Button:
            text: "Новая библиотека"
            font_size: 32

        Button:
            text: "Назад"
            font_size: 32
            on_release:
                app.root.transition.direction = 'right'
                app.root.current = "first"

<OptionWindow>:
    name: "Option"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "В разработке"
            font_size: 32

        Button:
            text: "Назад"
            font_size: 32
            on_release:
                app.root.transition.direction = 'right'
                app.root.current = "first"




<StWindow>
    name: "St"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Hello"
            font_size: 32
        Label:
            text: ""
            font_size: 32

    BoxLayout:
        orientation: "vertical"


        Label:
            text: "Введите перевод слова"
            font_size: 32

        TextInput
            id: field
            height: dp(40)
            size_hint_y: None
            hint_text: "Вводите перевод с маленькой буквы!"
        Label:
            text: ""
            font_size: 32

        Button:
            text: "Ввод"
            font_size: 32
            on_press:
                app.root.transition.direction = 'left'
                if field.text == 'привет': app.root.current = "St1"
                else : app.root.current = "StF"
                field.text == ''

<StF>
